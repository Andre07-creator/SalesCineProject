@model IEnumerable<SalesCineProject.Models.Movie>

@{
    ViewData["Title"] = "Movie";
}

<h2 class="panel-success">@ViewData["Title"]</h2>

<h4>Edit or Add movie</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-uppercase">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hour.Hour)
                </td>
                <th>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete"asp-route-id="@item.Id">  Delete</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </th>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-default">Adicionar filme</a>